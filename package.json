{
  "name": "devsync-gas",
  "version": "1.0.0",
  "description": "GitHub複数リポジトリからDevOps指標（DORA metrics）を収集し、Googleスプレッドシートに書き出すGASプロダクト",
  "type": "module",
  "scripts": {
    "build": "bun run esbuild.config.ts",
    "push": "bun run build && clasp push",
    "deploy": "clasp deploy",
    "open": "clasp open",
    "logs": "clasp logs",
    "test": "bun test",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts'",
    "prepare": "husky",
    "check:circular": "madge --circular --extensions ts src/",
    "check:deps": "madge --orphans --extensions ts src/",
    "check:unused": "ts-prune",
    "check:types": "type-coverage --at-least 95",
    "check:all": "bun run lint && bun run check:circular && bun run check:unused && bun run check:types && bunx tsc --noEmit"
  },
  "devDependencies": {
    "@google/clasp": "^2.4.2",
    "@types/google-apps-script": "^1.0.83",
    "@types/jsrsasign": "^10.5.15",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "esbuild": "^0.20.0",
    "esbuild-gas-plugin": "^0.8.0",
    "eslint": "^8.56.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "madge": "^8.0.0",
    "prettier": "^3.2.5",
    "ts-prune": "^0.10.3",
    "type-coverage": "^2.29.7",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "jsrsasign": "^11.1.0",
    "zod": "^4.3.6"
  }
}
